@model MovieApplication.Models.Movies 

@{
    Layout = null;
}

<style>
    #box {
        border: 1px solid black;
        height: 100%;
    }

    #main-div {
        height: 900px;
        background-image: url('../../Content/img/building6.jpg');
        background-size: 100% 900px;
    }

    .insidebox {
        border: 1px solid black;
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 200px;
        padding-left: 60px;
        padding-right: 60px;
        border-radius: 10px;
        background-color: whitesmoke;
    }

    div h1 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<script src="js/bootstrap.min.js"></script>
<script src="http://code.jquery.com/jquery.js"></script>
<div id="main-div">
    <div id="box" class="img-responsive">
        @using (@Html.BeginForm("Create", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="insidebox">
                <div> <h1>Add Movie</h1></div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-film"></span></div>
                        @Html.TextBoxFor(x => x.MovName, new { @class = "form-control", @placeholder = "Movie Name" })
                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.MovName) </span>

                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
                        @Html.TextBoxFor(x => x.Realease, new { @class = "form-control datetimepicker ", @placeholder = " release_date" })
                        @Html.ValidationMessageFor(x => x.Realease, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
                        @Html.DropDownList("listActors", new MultiSelectList(ViewBag.movies, "Id", "ActName"), new { multiple = "multiple", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Realease, "", new { @class = "text-danger" })
                    </div>
                    <script type="text/javascript">
                        $(function () {
                            $(".multiselect").multiselect();
                        });
                    </script>
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Actor</a>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-file"></span></div>
                        @Html.TextAreaFor(x => x.Plot, new { @class = "form-control", @placeholder = "plot" })

                    </div>
                    <span style="color:red">   @Html.ValidationMessageFor(x => x.Plot) </span>

                </div>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon"><span class="glyphicon glyphicon-camera"></span></div>
                        <input type="file" id=" imgfile" name="imgfile" class="form-control" required="required" />

                    </div>

                </div>



                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-success btn-block" />

                </div>

                <div class="form-group">
                    <p style="color:red">@ViewBag.error</p>
                </div>



            </div>
        }
        <div class="container" style="width:40%;margin-top:2%">

            @*<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Open Modal</a>*@

            <div class="modal fade" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h3 class="modal-title">Add Actor</h3>

                        </div>
                        <div class="modal-body">

                            @using (@Html.BeginForm("AddButtonActor", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="insidebox">
                                    <div> <h1>Add Actor</h1></div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="glyphicon glyphicon-film"></span></div>
                                            @Html.TextBox("ActName", new { @class = "form-control", @placeholder = "Actor Name" })
                                        </div>
                                        <span style="color:red">   @Html.ValidationMessage("ActName") </span>

                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></div>
                                            @Html.TextBox("ActDOB", "name", new { @class = "form-control datetimepicker ", @placeholder = " date of birth" })
                                            @Html.ValidationMessage("ActDOB", "", new { @class = "text-danger" })
                                        </div>


                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-addon"><span class="glyphicon glyphicon-file"></span></div>
                                                @Html.TextArea("ActBio", new { @class = "form-control", @placeholder = "biography" })

                                            </div>
                                            <span style="color:red">   @Html.ValidationMessage("ActBio") </span>

                                        </div>

                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-addon"><span class="glyphicon glyphicon-film"></span></div>
                                                <label class="radio-inline">
                                                    @Html.RadioButton("ActSex", "Male", new { @name = "gender" })
                                                    Male
                                                </label>
                                                <label class="radio-inline">
                                                    @Html.RadioButton("ActSex", "Female", new { @name = "gender" })
                                                    Female
                                                </label>
                                            </div>
                                            <span style="color:red">   @Html.ValidationMessage("ActSex") </span>

                                        </div>

                                        <div class="form-group">
                                            <input type="submit" value="Add" class="btn btn-success btn-block" />

                                        </div>

                                        <div class="form-group">
                                            <p style="color:red">@ViewBag.error</p>
                                        </div>



                                    </div>
                                </div>
                            }

                            <div style="text-align:center;display:none" id="loaderDiv">
                                <img src="~/Content/InternetSlowdown_Day.gif" width="150" /> @* //put any image in content folder*@
                            </div>


                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                            <input type="reset" value="Submit" class="btn btn-success" id="btnSubmit" />

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <script>

            $(document).ready(function () {


                $("#btnSubmit").click(function () {

                    $("#loaderDiv").show();

                    var myformdata = $("#myForm").serialize();

                    $.ajax({

                        type: "POST",
                        url: "/Admin/AddButtonActor",
                        data: myformdata,
                        success: function () {
                            $("#loaderDiv").hide();
                            $("#myModal").modal("hide");

                        }

                    })
                })

            })


        </script>








    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/CustomScript.js"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<div>
    @Html.ActionLink("Back to List", "ListMovie")
</div>
