@model IEnumerable<MovieApplication.Models.ShowData>

@{
    ViewBag.Title = "ListMovie";
}

<h2>ListMovie</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p>
    @Html.ActionLink("Add New ACtor", "AddActor")
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Realease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActName)
            </th>
            <th></th>
        </tr>
        @{
            string mname = "";

        }

        @foreach (var item in Model)
        {

            <tr>
                @if (mname.Equals("") || mname != item.MovName)
                {

                    <td>
                        @Html.DisplayFor(modelItem => item.MovName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plot)
                    </td>
                    <td>
                        <img src="@item.Poster" width="80px" height="80px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Realease)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActName)
                    </td>
                    mname = item.MovName;

                }
                else
                {
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ActName)
                    </td>

                }

                <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @*        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                *@
                </td>
            </tr>
        }

    </table>
